@model ProductDto
<form method="post">
    <div class=" pt-4">
        <div class="card container" style="border:1px solid #808080;">
            <div class="card-header bg-danger text-light row" style="border-radius: 0px;">
                <div class="col-12 col-md-6">
                    <h1 class="text-white">@Model.Name</h1>
                </div>
                <div class="col-12 col-md-6 text-end">
                    <h1 class="text-warning">@Model.Price.ToString("c")</h1>
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12 col-lg-4 p-1 text-center">
                            <img src="@Model.ImageUrl" style="border-radius:35px;" width="100%" class="rounded" />
                        </div>
                        <div class="col-12 col-lg-8">
                            <div class="row pl-3">

                                <div class="col-12">
                                    <span class="badge bg-danger text-white p-3 border">@Model.CategoryName</span>
                                    <p class="text-dark pt-3">@Model.Description</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-1">
                                    <label class="control-label pt-2" style="font-size:20px;">Qty</label>
                                </div>
                                <div class="col-2">
                                    <input class="form-control" type="number"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer row bg-white">
                <div class="col-12 col-md-6 pb-1 ">
                    <a class="btn btn-secondary btn-square form-control btn-lg" style="height:50px;" asp-controller="Home" asp-action="Index">Back to List</a>
                </div>
                <div class="col-12 col-md-6 ">
                    <button type="submit" class="btn btn-success form-control btn-lg" style="height:50px;">Add to Cart</button>
                </div>
            </div>
        </div>
    </div>
</form>
